# ==========================================
# 目标机型设置 (CMCC RAX3000M - Mediatek Filogic 820)
# ==========================================
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_cmcc_rax3000m=y

# 开启编译缓存 (加速)
CONFIG_CCACHE=y

# ==========================================
# 固件基本设置
# ==========================================
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_IPV6=y

# ==========================================
# LuCI 基础与主题
# ==========================================
CONFIG_PACKAGE_luci=y
CONFIG_LUCI_LANG_zh_cn=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-app-argon-config=y
CONFIG_PACKAGE_luci-i18n-argon-config-zh-cn=y

# ==========================================
# 提取补充：系统监控与包管理 (从你的列表提取)
# ==========================================
# 1. 性能统计图表 (CPU/内存/温度/Ping)
CONFIG_PACKAGE_luci-app-statistics=y
CONFIG_PACKAGE_luci-i18n-statistics-zh-cn=y
# 统计搜集守护进程
CONFIG_PACKAGE_collectd=y
CONFIG_PACKAGE_collectd-mod-cpu=y
CONFIG_PACKAGE_collectd-mod-interface=y
CONFIG_PACKAGE_collectd-mod-memory=y
CONFIG_PACKAGE_collectd-mod-network=y
CONFIG_PACKAGE_collectd-mod-thermal=y

# 2. 历史流量统计 (天/月/年记录)
CONFIG_PACKAGE_luci-app-vnstat2=y
CONFIG_PACKAGE_luci-i18n-vnstat2-zh-cn=y
CONFIG_PACKAGE_vnstati2=y

# 3. 软件包网页管理器
CONFIG_PACKAGE_luci-app-package-manager=y
CONFIG_PACKAGE_luci-i18n-package-manager-zh-cn=y

# ==========================================
# USB 基础与文件系统 (支持 U 盘/硬盘)
# ==========================================
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb3=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-uas=y
CONFIG_PACKAGE_automount=y

# 文件系统 (NTFS/ExFAT/EXT4)
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-exfat=y
CONFIG_PACKAGE_kmod-fs-ntfs3=y

# 磁盘管理与共享 (Samba)
CONFIG_PACKAGE_luci-app-diskman=y
CONFIG_PACKAGE_luci-i18n-diskman-zh-cn=y
CONFIG_PACKAGE_luci-app-samba4=y
CONFIG_PACKAGE_luci-i18n-samba4-zh-cn=y
CONFIG_PACKAGE_autosamba=y

# ==========================================
# USB 共享网络驱动 (针对中兴 F50/安卓/华为)
# ==========================================
CONFIG_PACKAGE_kmod-usb-net=y
CONFIG_PACKAGE_kmod-usb-net-rndis=y
CONFIG_PACKAGE_kmod-usb-net-cdc-ncm=y
CONFIG_PACKAGE_kmod-usb-net-cdc-ether=y
CONFIG_PACKAGE_kmod-usb-serial-option=y
CONFIG_PACKAGE_kmod-usb-serial-wwan=y

# ==========================================
# 网络性能优化 (TurboACC)
# ==========================================
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_luci-i18n-turboacc-zh-cn=y
# 【去除】硬件加速 (为了兼容 SQM)
# CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_OFFLOADING is not set
# 【保留】BBR 拥塞控制
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_BBR_CCA=y
# 【保留】FullCone NAT
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_FULLCONE_NAT=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_PDNSD=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_DNSFORWARDER=y

# ==========================================
# 流量控制 (SQM QoS)
# ==========================================
CONFIG_PACKAGE_luci-app-sqm=y
CONFIG_PACKAGE_luci-i18n-sqm-zh-cn=y
CONFIG_PACKAGE_kmod-sched-cake=y
CONFIG_PACKAGE_kmod-sched-fq_codel=y

# ==========================================
# 科学上网 (Passwall)
# ==========================================
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_luci-i18n-passwall-zh-cn=y
# 核心组件 (根据列表确认)
CONFIG_PACKAGE_xray-core=y
CONFIG_PACKAGE_sing-box=y
CONFIG_PACKAGE_chinadns-ng=y
CONFIG_PACKAGE_haproxy=y
CONFIG_PACKAGE_v2ray-plugin=y
CONFIG_PACKAGE_shadowsocks-rust-sslocal=y

# ==========================================
# 其他功能插件
# ==========================================
# 1. 流量监控 (实时监控客户端)
CONFIG_PACKAGE_luci-app-nlbwmon=y
CONFIG_PACKAGE_luci-i18n-nlbwmon-zh-cn=y

# 2. 内网穿透 (Frpc)
CONFIG_PACKAGE_luci-app-frpc=y
CONFIG_PACKAGE_luci-i18n-frpc-zh-cn=y

# 3. 网络唤醒 (WoL)
CONFIG_PACKAGE_luci-app-wol=y
CONFIG_PACKAGE_luci-i18n-wol-zh-cn=y
CONFIG_PACKAGE_etherwake=y

# 4. 定时重启
CONFIG_PACKAGE_luci-app-autoreboot=y
CONFIG_PACKAGE_luci-i18n-autoreboot-zh-cn=y

# 5. 终端 (TTYD)
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_luci-i18n-ttyd-zh-cn=y

# 6. UPnP
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_luci-i18n-upnp-zh-cn=y

# 7. 系统常用工具
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_nano=y
CONFIG_PACKAGE_bsdtar=y
CONFIG_PACKAGE_unzip=y
CONFIG_PACKAGE_tcping=y
# ==========================================
#Wi-Fi 核心功能配置
CONFIG_MTK_DOT11_HE_AX=y
CONFIG_MTK_DOT11_N_SUPPORT=y
CONFIG_MTK_DOT11_VHT_AC=y
CONFIG_MTK_MU_RA_SUPPORT=y
CONFIG_MTK_MUMIMO_SUPPORT=y
CONFIG_MTK_WPA3_SUPPORT=y
CONFIG_MTK_WSC_INCLUDED=y
CONFIG_MTK_WSC_V2_SUPPORT=y
CONFIG_MTK_WLAN_SERVICE=y
CONFIG_MTK_WIFI_DRIVER=y
CONFIG_MTK_WIFI_MODE_AP=m
#5G 25dB 高功率支持
CONFIG_MTK_5G_25DB_SUPPORT=y
#WARP 和 WDS 网络功能配置
CONFIG_MTK_WARP_V2=y
CONFIG_MTK_WDS_SUPPORT=y
#WHNAT 性能优化配置(与sqm冲突，禁用)
CONFIG_MTK_WHNAT_SUPPORT=n
#其他
CONFIG_MTK_FAST_NAT_SUPPORT=n  #硬件级 NAT 加速，提升网络性能(与sqm冲突，禁用)
CONFIG_MTK_GREENAP_SUPPORT=y          #节能模式，延长设备寿命
CONFIG_MTK_HDR_TRANS_RX/TX_SUPPORT=y  #HDR (High Dynamic Range) 传输支持，提升无线信号质量
CONFIG_MTK_ICAP_SUPPORT=y    #ICAP (Integrated Circuit Analysis Protocol) 支持，用于芯片调试
CONFIG_MTK_IGMP_SNOOP_SUPPORT=y    #IGMP 智能侦听，提升组播性能
CONFIG_MTK_INTERWORKING=y       #支持 802.11r 快速漫游
CONFIG_MTK_BAND_STEERING=y      #频段智能切换，优化连接质量
CONFIG_MTK_MAP_SUPPORT=y         #支持 MAP (Mesh Access Point) 协议，用于 Mesh 网络
